<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>


    <display-name>Archetype Created Web Application</display-name>
    <context-param>
        <param-name>success</param-name>
        <param-value>/success</param-value>
    </context-param>
    <context-param>
        <param-name>tryagain</param-name>
        <param-value>/tryagain</param-value>
    </context-param>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>org.itstep.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>org.itstep.SignInServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>org.itstep.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>success</servlet-name>
        <servlet-class>org.itstep.SuccessServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>tryagain</servlet-name>
        <servlet-class>org.itstep.TryAgainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>success</servlet-name>
        <url-pattern>/success</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>tryagain</servlet-name>
        <url-pattern>/tryagain</url-pattern>
    </servlet-mapping>


</web-app>
